                        <div class="callBack">
                            <a href="#">{{Header_coll}}
                                <img src="{{ base_url() }}assets/img/callback.png" class="img-fluid"></a>
                            </div>
                            <div class="info">
                                <p>(057)000-00-00</p>
                                <p>(057)000-00-00</p>
                                <p>(057)000-00-00</p>

                            </div>
                        </div>
                    </div>
                    <div class="row hedSecRow">
                        <div class="hidden-xs-down">
                            <nav class="nav">
                                <ul class="siteNav">
                                    <li>
                                        <a href="{{ base_url() }}">{{main_menu.Menu_main}}</a>
                                    </li>

                                    <li class="dropdown">
                                        <a id="drop1" href="{{ base_url() }}main/examples" class="dropdown-toggle" data-toggle="dropdown">
                                            {{main_menu.Menu_example}}
                                        </a>
                                        <ul class="dropdown-menu">
                                            {% for cat in examp_cat %}
                                                <li style="font-size: 12px;">
                                                    <a href="{{ base_url() }}main/examples/{{ loop.index }}">{{ cat }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="{{ base_url() }}main/education">{{main_menu.Menu_education}}</a>
                                    </li>
                                    <li>
                                        <a href="#">{{main_menu.Menu_rent}}</a>
                                    </li>
                                    <li>
                                        <a href="#">{{main_menu.Menu_evaluation}}</a>
                                    </li>
                                    <li>
                                        <a href="#">{{main_menu.Menu_reviews}}</a>
                                    </li>
                                    <li>
                                        <a href="{{ base_url() }}main/contact">{{main_menu.Menu_contacts}}</a>
                                    </li>
                                    <li>
                                        <a href="#">{{main_menu.Menu_shop}}</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>

                {{ error }}

