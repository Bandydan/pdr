<body>
    <div class="myMain">
        <header class="header">
            <div class="container">
                <div class="row hedFirstRow">
                    <div class="col-xs-3">
                        <a href="{{ base_url() }}">
                            <img src="{{ base_url() }}assets/img/logo.png" class="img-fluid">
                        </a>
                        <div class="news">
                            <a href="{{ base_url() }}news">
                                <img src="{{ base_url() }}assets/img/NEWS.gif">
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="wrapImg">
