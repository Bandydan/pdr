{% extends 'admin/admin_template.twig' %}

{% block scripts %}
{{parent()}}
{% endblock %}

{% block header %}
{{parent()}}
{% endblock %}

{% block menu %}
{{parent()}}
{% endblock %}

{% block content %}
<section id="main" class="column">
<h4 class="alert_info">{% if error is defined %} {{ 'Ошибка: ' }} {{ error }} {% else %} {{ 'Информация' }} {% endif %}</h4>
<article class="module width_full">
	<header><h3 class="tabs_involved" align="center">Все комментарии</h3></header>

	<div class="tab_container">
		<table class="tablesorter" cellspacing="0"> 
		<thead> 
			<tr> 
				<th></th> 
				<th>Наша работа</th> 
				<th>Комментарий</th> 
				<th>Пользователь</th> 
				<th>Дата создания</th>
				<th>Действия</th> 
			</tr> 
		</thead> 
		<tbody> 
			{% for comment in comments %} 
			<tr> 
				<td><input type="checkbox"></td> 
				<td><a href="#">Полировка Lexus RX350</a></td> 
				<td>{{comment.comment_text}}</td> 
				<td>{{comment.login}}</td> 
				<td>{{comment.comment_created}}</td>
				<td>
					<a href="#"><img src="{{ base_url() }}assets/img/admin/icn_photo.png" alt="Просмотреть на странице"></a>
					<a href="#"><img src="{{ base_url() }}assets/img/admin/icn_edit.png" alt="Ответить"></a>
					<a href="{{ base_url() }}admin/delete_item/{{method}}/{{table}}/{{comment.id}}"><img src="{{ base_url() }}assets/img/admin/icn_trash.png" alt="Удалить"></a>
				</td> 
			</tr> 
			{% endfor %}	
		</tbody> 
		</table>
		</div><!-- end of #tab1 -->
</article><!-- end of content manager article -->

{% endblock %}

{% block footer %}
{{parent()}}
{% endblock %}